@model CharacterSheetApp.Models.Character
<h2>Create</h2>
<hr/>
<form asp-action="Create" asp-controller="Character" asp-antiforgery="true">
    <div class="form-horizontal">
        <h4>Character</h4>
        <hr/>
        <div class="form-group">
            <div class="row">
                <label class="control-label col-md-2" asp-for="Name"></label>
                <div class="col-md-10">
                    <input class="form-control" asp- asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-2" asp-for="IsActive"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="IsActive"/>
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-2" asp-for="Level"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Level" />
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-2" asp-for="Strength"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Strength" />
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-2" asp-for="Dexterity"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Dexterity" />
                </div>
            </div>
            <div class="row">
                <label class="control-label col-md-2" asp-for="Intelligence"></label>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Intelligence" />
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Add Character" />
                <div asp-validation-summary="All"></div>
            </div>
        </div>
    </div>
</form>
